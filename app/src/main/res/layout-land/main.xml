<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient" >
	<LinearLayout  
    	android:layout_width="fill_parent" 
    	android:layout_height="fill_parent" 
    	android:orientation="vertical" 
    	android:layout_weight="1">
    	<ImageView
    		android:layout_width="fill_parent" 
    		android:layout_height="fill_parent"
    		android:layout_weight="1"
			android:id="@+id/push_led"
			android:src="@drawable/led"
			android:scaleType="fitCenter" />
		<LinearLayout
		    android:id="@+id/push_led_text_layout"
		    android:layout_marginTop="10dip"
		    android:paddingTop="8dip"
		    android:paddingBottom="8dip"
		    android:orientation="horizontal"
		    android:layout_gravity="center"
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"
		    android:background="@drawable/border">
		    <TextView 
		    	android:id="@+id/push_led_text"
			    android:layout_gravity="center_horizontal"
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content"
			    android:textSize="20dip"
			    android:textColor="@color/White"
			    android:text="@string/PushLedText" />
		</LinearLayout>
		<ImageButton 
			android:layout_width="fill_parent" 
    		android:layout_height="fill_parent"
    		android:layout_weight="1"
			android:id="@+id/push_button"
			android:src="@drawable/button"
			android:background="@null"
			android:scaleType="fitCenter" />
		<LinearLayout
		    android:id="@+id/push_text_layout"
		    android:layout_marginTop="10dip"
		    android:paddingTop="8dip"
		    android:paddingBottom="8dip"
		    android:layout_marginBottom="13dip"
		    android:orientation="horizontal"
		    android:layout_gravity="center"
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"
		    android:background="@drawable/border">
		    <TextView 
		    	android:id="@+id/push_text"
			    android:layout_gravity="center_horizontal"
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content"
			    android:textSize="20dip"
			    android:textColor="@color/White"
			    android:text="@string/PushText" />
		</LinearLayout>
	</LinearLayout>
    <LinearLayout  
    	android:layout_width="fill_parent" 
    	android:layout_height="fill_parent" 
    	android:orientation="vertical" 
    	android:layout_weight="1">
    	<ImageView
    		android:layout_width="fill_parent" 
    		android:layout_height="fill_parent"
    		android:layout_weight="1"
			android:id="@+id/board_image"
			android:src="@drawable/board"
			android:scaleType="fitCenter" />
	</LinearLayout>
</LinearLayout>